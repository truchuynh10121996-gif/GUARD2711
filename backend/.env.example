# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/agribank-digital-guard

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Speech-to-Text (Google Cloud Speech API)
# Option 1: Using service account key file (RECOMMENDED)
GOOGLE_APPLICATION_CREDENTIALS=./google-cloud-key.json

# Option 2: Using JSON credentials directly (Alternative)
# GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Google Cloud Project ID (Optional)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
